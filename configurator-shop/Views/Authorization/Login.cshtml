@model configurator_shop.Models.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Вход";
    Layout = "_Layout";
}

<h1 class="text-center text-wrap my-5">Войти</h1>

<div class="container">
    <form asp-controller="Authorization" asp-action="Login" method="post">
        <div class="row">
            <div class="col-md-2 col-lg-3"></div>
            <div class="col-12 col-md-8 col-lg-6 d-flex flex-column">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control rounded-pill" placeholder="user@@example.org">
                    <div class="invalid-feedback visible">
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control rounded-pill" placeholder="">
                    <div class="invalid-feedback visible">
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <a class="text-muted text-decoration-none" asp-controller="Authorization" asp-action="Recovery">Забыли пароль?</a>
                </div>
                <button type="submit" class="btn btn-primary btn-lg mt-3 px-5 mx-auto">Войти</button>
            </div>
            <div class="col-md-2 col-lg-3"></div>
        </div>
    </form>
</div>

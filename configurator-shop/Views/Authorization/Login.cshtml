@model dynamic

@{
    ViewBag.Title = "Вход";
    Layout = "_Layout";
}

<h1 class="text-center text-wrap my-5">Войти</h1>

<div class="container">
    <form asp-controller="Authorization" asp-action="Login" method="post">
        <div class="row">
            <div class="col-md-2 col-lg-3"></div>
            <div class="col-12 col-md-8 col-lg-6 d-flex flex-column">
                <div class="mb-3">
                    <label for="emailForm" class="form-label">E-mail</label>
                    <input type="email" class="form-control rounded-pill" id="emailForm" placeholder="name@example.com">
                </div>
                <div class="mb-3">
                    <label for="passwordForm" class="form-label">Пароль</label>
                    <input type="password" class="form-control rounded-pill" id="passwordForm">
                    <a class="text-muted text-decoration-none" asp-controller="Authorization" asp-action="Recovery">Забыли пароль?</a>
                </div>
                <button type="submit" class="btn btn-primary btn-lg mt-3 px-5 mx-auto">Войти</button>
            </div>
            <div class="col-md-2 col-lg-3"></div>
        </div>
    </form>
</div>

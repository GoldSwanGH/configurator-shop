@model configurator_shop.Models.ViewModels.PsuViewModel

@{
    ViewBag.Title = "Добавить блок питания";
    Layout = "_Layout";
}

<h1 class="text-center text-wrap mt-5">Добавить блок питания</h1>

<div class="container my-5">
    <form asp-controller="Shop" asp-action="AddPsu" method="post" enctype="multipart/form-data">
        <div class="row">
            @Html.HiddenFor(m => m.Psu.Product.TypeId)
            @Html.HiddenFor(m => m.Psu.Product.Type)
            <div class="validation col-12 mb-3" asp-validation-summary="ModelOnly"></div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Psu.Product.Name" class="form-label"></label>
                <input asp-for="Psu.Product.Name" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Psu.Product.Description" class="form-label"></label>
                <input asp-for="Psu.Product.Description" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Psu.Product.Price" class="form-label"></label>
                <input asp-for="Psu.Product.Price" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Psu.Manufacturer" class="form-label"></label>
                <select asp-for="Psu.Manufacturer" class="form-control rounded-pill" asp-items="ViewBag.SpecManufacturers">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Psu.Power" class="form-label"></label>
                <input asp-for="Psu.Power" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Psu.FormFactor" class="form-label"></label>
                <select asp-for="Psu.FormFactor" class="form-control rounded-pill" asp-items="ViewBag.SpecPsuFormFactors">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            <div class="col-12 col-md-4 mb-3 d-flex align-items-center">
                <label asp-for="Psu.Pfc" class="form-check-label"></label>
                <input asp-for="Psu.Pfc" class="form-check-input"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Psu.Sata" class="form-label"></label>
                <input asp-for="Psu.Sata" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Psu.Molex" class="form-label"></label>
                <input asp-for="Psu.Molex" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Psu.Pciex24" class="form-label"></label>
                <input asp-for="Psu.Pciex24" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Psu.Pciex8" class="form-label"></label>
                <input asp-for="Psu.Pciex8" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Psu.Pciex6" class="form-label"></label>
                <input asp-for="Psu.Pciex6" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Psu.Pciex4" class="form-label"></label>
                <input asp-for="Psu.Pciex4" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Psu.Pciex2" class="form-label"></label>
                <input asp-for="Psu.Pciex2" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Psu.Plus" class="form-label"></label>
                <select asp-for="Psu.Plus" class="form-control rounded-pill" asp-items="ViewBag.SpecPsuPlusTypes">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            @if (Model.ImagePath != null)
            {
                <div class="col-12 col-lg-6 form-group d-flex flex-column justify-content-center align-items-center mb-3">
                    <label for="productPic" class="form-label"></label>
                    <img src="@Model.ImagePath" asp-append-version="true" id="productPic" alt="" style="height: 125px; width: 125px;"/>
                </div>
            }
            <div class="col-12 col-lg-6 mb-3">
                <label asp-for="Image" class="form-label"></label>
                <input asp-for="Image" class="form-control rounded-pill">
            </div>
            <div class="d-flex flex-column mb-3">
                <input type="submit" class="btn btn-primary mx-auto mt-3" value="Сохранить"/>
            </div>  
        </div>
    </form>
</div>
@model configurator_shop.Models.ViewModels.MotherboardViewModel

@{
    ViewBag.Title = "Добавить материнскую плату";
    Layout = "_Layout";
}

<h1 class="text-center text-wrap mt-5">Добавить материнскую плату</h1>

<div class="container my-5">
    <form asp-controller="Shop" asp-action="AddMotherboard" method="post" enctype="multipart/form-data">
        <div class="row">
            @Html.HiddenFor(m => m.Motherboard.Product.TypeId)
            @Html.HiddenFor(m => m.Motherboard.Product.Type)
            @Html.HiddenFor(m => m.Motherboard.Product.Image)
            <div class="validation col-12 mb-3" asp-validation-summary="ModelOnly"></div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.Product.Name" class="form-label"></label>
                <input asp-for="Motherboard.Product.Name" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.Product.Description" class="form-label"></label>
                <input asp-for="Motherboard.Product.Description" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.Product.Price" class="form-label"></label>
                <input asp-for="Motherboard.Product.Price" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.Manufacturer" class="form-label"></label>
                <select asp-for="Motherboard.Manufacturer" class="form-control rounded-pill" asp-items="ViewBag.SpecManufacturers">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.Socket" class="form-label"></label>
                <select asp-for="Motherboard.Socket" class="form-control rounded-pill" asp-items="ViewBag.SpecSockets">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.FormFactor" class="form-label"></label>
                <select asp-for="Motherboard.FormFactor" class="form-control rounded-pill" asp-items="ViewBag.SpecMotherboardFormFactors">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.Chipset" class="form-label"></label>
                <select asp-for="Motherboard.Chipset" class="form-control rounded-pill" asp-items="ViewBag.SpecMotherboardChipsets">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.RamTechnology" class="form-label"></label>
                <select asp-for="Motherboard.RamTechnology" class="form-control rounded-pill" asp-items="ViewBag.SpecRamTechnologies">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.RamType" class="form-label"></label>
                <select asp-for="Motherboard.RamType" class="form-control rounded-pill" asp-items="ViewBag.SpecRamTypes">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.RamSlots" class="form-label"></label>
                <input asp-for="Motherboard.RamSlots" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.RamMaxTotalSize" class="form-label"></label>
                <input asp-for="Motherboard.RamMaxTotalSize" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.CpuPinPowering" class="form-label"></label>
                <select asp-for="Motherboard.CpuPinPowering" class="form-control rounded-pill" asp-items="ViewBag.SpecCpuPinPowerings">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.Pciex16" class="form-label"></label>
                <input asp-for="Motherboard.Pciex16" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.Pciex16version" class="form-label"></label>
                <select asp-for="Motherboard.Pciex16version" class="form-control rounded-pill" asp-items="ViewBag.SpecPciex16versions">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.Pciex4" class="form-label"></label>
                <input asp-for="Motherboard.Pciex4" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.Pciex1" class="form-label"></label>
                <input asp-for="Motherboard.Pciex1" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.Pci" class="form-label"></label>
                <input asp-for="Motherboard.Pci" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.Sata3" class="form-label"></label>
                <input asp-for="Motherboard.Sata3" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.Sata2" class="form-label"></label>
                <input asp-for="Motherboard.Sata2" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.M2" class="form-label"></label>
                <input asp-for="Motherboard.M2" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.Thunderbolt" class="form-label"></label>
                <input asp-for="Motherboard.Thunderbolt" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.UsbTypeC" class="form-label"></label>
                <input asp-for="Motherboard.UsbTypeC" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.Usb31" class="form-label"></label>
                <input asp-for="Motherboard.Usb31" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.Usb30" class="form-label"></label>
                <input asp-for="Motherboard.Usb30" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Motherboard.Usb20" class="form-label"></label>
                <input asp-for="Motherboard.Usb20" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3 d-flex align-items-center">
                <label asp-for="Motherboard.WiFi" class="form-check-label"></label>
                <input asp-for="Motherboard.WiFi" class="form-check-input"/>
            </div>
            <div class="col-12 col-md-4 mb-3 d-flex align-items-center">
                <label asp-for="Motherboard.Sli" class="form-check-label"></label>
                <input asp-for="Motherboard.Sli" class="form-check-input"/>
            </div>
            <div class="col-12 col-md-4 mb-3 d-flex align-items-center">
                <label asp-for="Motherboard.Crossfire" class="form-check-label"></label>
                <input asp-for="Motherboard.Crossfire" class="form-check-input"/>
            </div>
            @if (Model.ImagePath != null)
            {
                <div class="col-12 col-lg-6 form-group d-flex flex-column justify-content-center align-items-center mb-3">
                    <label for="productPic" class="form-label"></label>
                    <img src="@Model.ImagePath" asp-append-version="true" id="productPic" alt="" style="height: 125px; width: 125px;"/>
                </div>
            }
            <div class="col-12 col-lg-6 mb-3">
                <label asp-for="Image" class="form-label"></label>
                <input asp-for="Image" class="form-control rounded-pill">
            </div>
            <div class="d-flex flex-column mb-3">
                <input type="submit" class="btn btn-primary mx-auto mt-3" value="Сохранить"/>
            </div>
        </div>
    </form>
</div>
@model configurator_shop.Models.ViewModels.CpuCoolerViewModel

@{
    ViewBag.Title = "Добавить процессорный кулер";
    Layout = "_Layout";
}

<h1 class="text-center text-wrap mt-5">Добавить процессорный кулер</h1>

<div class="container my-5">
    <form asp-controller="Shop" asp-action="AddCpuCooler" method="post" enctype="multipart/form-data">
        <div class="row">
            @Html.HiddenFor(m => m.CpuCooler.Product.TypeId)
            @Html.HiddenFor(m => m.CpuCooler.Product.Type)
            @Html.HiddenFor(m => m.CpuCooler.Product.Image)
            <div class="validation col-12 mb-3" asp-validation-summary="ModelOnly"></div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="CpuCooler.Product.Name" class="form-label"></label>
                <input asp-for="CpuCooler.Product.Name" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="CpuCooler.Product.Description" class="form-label"></label>
                <input asp-for="CpuCooler.Product.Description" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="CpuCooler.Product.Price" class="form-label"></label>
                <input asp-for="CpuCooler.Product.Price" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="CpuCooler.Manufacturer" class="form-label"></label>
                <select asp-for="CpuCooler.Manufacturer" class="form-control rounded-pill" asp-items="ViewBag.SpecManufacturers">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="CpuCooler.CoolerType" class="form-label"></label>
                <select asp-for="CpuCooler.CoolerType" class="form-control rounded-pill" asp-items="ViewBag.SpecCoolerTypes">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="CpuCooler.Socket" class="form-label"></label>
                <select asp-for="CpuCooler.Socket" class="form-control rounded-pill" asp-items="ViewBag.SpecSockets">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="CpuCooler.Tdp" class="form-label"></label>
                <input asp-for="CpuCooler.Tdp" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="CpuCooler.Height" class="form-label"></label>
                <input asp-for="CpuCooler.Height" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="CpuCooler.Speed" class="form-label"></label>
                <input asp-for="CpuCooler.Speed" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="CpuCooler.Noise" class="form-label"></label>
                <input asp-for="CpuCooler.Noise" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="CpuCooler.Weight" class="form-label"></label>
                <input asp-for="CpuCooler.Weight" class="form-control rounded-pill"/>
            </div>
            @if (Model.ImagePath != null)
            {
                <div class="col-12 col-lg-6 form-group d-flex flex-column justify-content-center align-items-center mb-3">
                    <label for="productPic" class="form-label"></label>
                    <img src="@Model.ImagePath" asp-append-version="true" id="productPic" alt="" style="height: 125px; width: 125px;"/>
                </div>
            }
            <div class="col-12 col-lg-6 mb-3">
                <label asp-for="Image" class="form-label"></label>
                <input asp-for="Image" class="form-control rounded-pill">
            </div>
            <div class="d-flex flex-column mb-3">
                <input type="submit" class="btn btn-primary mx-auto mt-3" value="Сохранить"/>
            </div>
        </div>
    </form>
</div>
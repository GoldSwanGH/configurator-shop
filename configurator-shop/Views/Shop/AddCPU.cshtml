@model configurator_shop.Models.ViewModels.CpuViewModel

@{
    ViewBag.Title = "Добавить процессор";
    Layout = "_Layout";
}

<h1 class="text-center text-wrap mt-5">Добавить процессор</h1>

<div class="container my-5">
    <form asp-controller="Shop" asp-action="AddCpu" method="post" enctype="multipart/form-data">
        <div class="row">
            @Html.HiddenFor(m => m.Cpu.Product.TypeId)
            @Html.HiddenFor(m => m.Cpu.Product.Type)
            @Html.HiddenFor(m => m.Cpu.Product.Image)
            <div class="validation col-12 mb-3" asp-validation-summary="ModelOnly"></div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Cpu.Product.Name" class="form-label"></label>
                <input asp-for="Cpu.Product.Name" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Cpu.Product.Description" class="form-label"></label>
                <input asp-for="Cpu.Product.Description" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Cpu.Product.Price" class="form-label"></label>
                <input asp-for="Cpu.Product.Price" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Cpu.Manufacturer" class="form-label"></label>
                <select asp-for="Cpu.Manufacturer" class="form-control rounded-pill" asp-items="ViewBag.SpecManufacturers">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Cpu.Family" class="form-label"></label>
                <select asp-for="Cpu.Family" class="form-control rounded-pill" asp-items="ViewBag.SpecCpuFamilies">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Cpu.Series" class="form-label"></label>
                <select asp-for="Cpu.Series" class="form-control rounded-pill" asp-items="ViewBag.SpecCpuSeries">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Cpu.Socket" class="form-label"></label>
                <select asp-for="Cpu.Socket" class="form-control rounded-pill" asp-items="ViewBag.SpecSockets">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Cpu.GpuChipset" class="form-label"></label>
                <select asp-for="Cpu.GpuChipset" class="form-control rounded-pill" asp-items="ViewBag.SpecGpuChipsets">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Cpu.Packaging" class="form-label"></label>
                <select asp-for="Cpu.Packaging" class="form-control rounded-pill" asp-items="ViewBag.SpecCpuPackagings">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Cpu.RamTechnology" class="form-label"></label>
                <select asp-for="Cpu.RamTechnology" class="form-control rounded-pill" asp-items="ViewBag.SpecRamTechnologies">
                    <option value="@null" selected>Нет</option>
                </select>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Cpu.Cores" class="form-label"></label>
                <input asp-for="Cpu.Cores" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Cpu.Threads" class="form-label"></label>
                <input asp-for="Cpu.Threads" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3 d-flex align-items-center">
                <label asp-for="Cpu.UnlockedMultiplier" class="form-check-label"></label>
                <input asp-for="Cpu.UnlockedMultiplier" class="form-check-input"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Cpu.FreqBase" class="form-label"></label>
                <input asp-for="Cpu.FreqBase" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Cpu.FreqBoost" class="form-label"></label>
                <input asp-for="Cpu.FreqBoost" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Cpu.TechProcess" class="form-label"></label>
                <input asp-for="Cpu.TechProcess" class="form-control rounded-pill"/>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label asp-for="Cpu.Tdp" class="form-label"></label>
                <input asp-for="Cpu.Tdp" class="form-control rounded-pill"/>
            </div>
            @if (Model.ImagePath != null)
            {
                <div class="col-12 col-lg-6 form-group d-flex flex-column justify-content-center align-items-center mb-3">
                    <label for="productPic" class="form-label"></label>
                    <img src="@Model.ImagePath" asp-append-version="true" id="productPic" alt="" style="height: 125px; width: 125px;"/>
                </div>
            }
            <div class="col-12 col-lg-6 mb-3">
                <label asp-for="Image" class="form-label"></label>
                <input asp-for="Image" class="form-control rounded-pill">
            </div>
            <div class="d-flex flex-column mb-3">
                <input type="submit" class="btn btn-primary mx-auto mt-3" value="Сохранить"/>
            </div>
        </div>
    </form>
</div>
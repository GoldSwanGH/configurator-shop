@model dynamic

@{
    ViewBag.Title = "Изменить конфигурацию";
    Layout = "_Layout";
}

<h1 class="text-center text-wrap mt-3">Конфигуратор</h1>

<div class="row mt-5 accordion" id="configuratorTabs">
    <div class="col-12 col-md-3">
        <div class="accordion-item active">
            <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                    Описание
                </button>
            </h2>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
                    Состав
                </button>
            </h2>
        </div>
        <h4 class="text-primary text-wrap mt-3">Сумма: 699$</h4>
    </div>
    <div class="col-12 col-md-9 border-start border-2 border-dark ps-2">
        <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne" data-bs-parent="#configuratorTabs">
            <div class="accordion-body">
                <form>
                    <div class="d-flex flex-column mt-2">
                        <input type="text" class="form-control" aria-lable="Название сборки" placeholder="Придумайте название сборки"/>
                        <button type="submit" class="btn btn-outline-primary btn-sm ms-auto mt-2">Сохранить</button>
                    </div>
                    <div class="d-flex flex-column mt-3">
                        <textarea type="text" class="form-control custom-scroll" aria-lable="Описание сборки" placeholder="Придумайте описание сборки" style="resize: none; height: 200px;"></textarea>
                        <button type="submit" class="btn btn-outline-primary btn-sm ms-auto mt-2">Сохранить</button>
                    </div>
                </form>
                <button type="submit" class="btn btn-primary mt-3">Опубликовать</button>
            </div>
        </div>
        <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingTwo" data-bs-parent="#configuratorTabs">
            <div class="accordion-body">
                <div class="mb-3 border-bottom border-1 border-dark">
                    <h4 class="row ms-2">Процессор</h4>
                    <div class="row flex-lg-nowrap product ms-2">
                        <img alt="Изображение товара" src="~/static-pic/pc-parts/cpu.svg" class="col-2 col-lg-3 my-2 mx-auto mx-lg-0 mx-xl-0"/>
                        <div class="col-10 col-lg-9 d-flex flex-column justify-content-between">
                            <div class="row mb-2">
                                <div class="col-10">
                                    Компьютерная деталь, довольно длинное описание детали с техническими характеристиками.
                                </div>
                                <div class="col-2 text-end">
                                    <span class="fs-3">699$</span>
                                </div>
                            </div>
                            <div class="row mb-2 justify-content-between flex-wrap">
                                <div class="fit d-flex">
                                    <span class="mt-auto">Рейтинг: 5.0</span>
                                </div>
                                <div class="col-lg-4 col-xl-4 col-md-4 d-flex flex-row">
                                    <button class="btn btn-primary btn-sm w-100 fit me-3" type="submit">Убрать</button>
                                    <a href="#" class="btn btn-primary btn-sm w-100 fit align-items-center">Детали</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mb-3 border-bottom border-1 border-dark">
                    <h4 class="row ms-2">Материнская плата</h4>
                    <p class="row text-danger ms-2">В сборке отсутствует материнская плата! (проверьте мать)</p>
                    <div class="row mb-2 ms-2">
                        <button type="submit" class="btn btn-outline-primary fit">Добавить</button>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="input-group">
                        <select class="form-select" aria-label="Выбор типа детали">
                            <option selected>Выберите тип...</option>
                            <option value="RAM">Оперативная память</option>
                            <option value="Motherboard">Материнская плата</option>
                            <option value="CPU">Процессор</option>
                            <option value="GPU">Видеоадаптер</option>
                            <option value="Cooling">Охлаждение</option>
                            <option value="SSD">SSD накопитель</option>
                            <option value="HDD">Жесткий диск</option>
                        </select>
                        <button type="submit" class="btn btn-outline-primary">Добавить</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

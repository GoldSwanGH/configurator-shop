<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - configurator_shop</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/scss/bootstrap.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body class="bg-light text-dark d-flex flex-column h-100 custom-scroll">
<header class="position-fixed w-100 z-8">
    <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-dark bg-dark border-bottom box-shadow mb-3 align-items-center">
        <div class="container flex-grow-0">
            <a class="navbar-brand text-nowrap" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="logo"></i>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse"
                    aria-expanded="false" aria-label="Toggle navigation">
                <i class="navbar-toggler-icon"></i>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                <ul class="navbar-nav ms-lg-5 ms-xl-5 me-sm-0 me-md-3 me-lg-5 gap-2 gap-md-0">
                    <li class="nav-item mx-lg-2 mx-md-1 mx-sm-1">
                        <a class="nav-link text-light btn btn-sm btn-primary fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                    </li>
                    <li class="nav-item mx-lg-2 mx-md-1 mx-sm-1">
                        <a class="nav-link text-light btn btn-sm btn-primary fw-bold" asp-area="" asp-controller="Shop" asp-action="Categories">Товары</a>
                    </li>
                    <li class="nav-item mx-lg-2 mx-md-1 mx-sm-1">
                        <a class="nav-link text-light btn btn-sm btn-primary fw-bold" asp-area="" asp-controller="Configurator" asp-action="Index">Конфигуратор</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-sm-0 ms-md-3 ms-lg-5 gap-2 gap-md-0 mt-2 mt-md-0">
                    <li class="nav-item mx-lg-2 mx-md-1 mx-sm-1">
                        <a id="cartButton" class="nav-link text-light btn btn-sm btn-primary" asp-area="" asp-controller="Order" asp-action="Cart" data-bs-container="body" data-bs-toggle="popover"
                           data-bs-placement="bottom" data-bs-content="Товар добавлен в корзину" data-bs-trigger="manual" data-bs-custom-class="z-9">
                            <i class="bi bi-bag"></i>
                        </a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item mx-lg-2 mx-md-1 mx-sm-1">
                            <a class="nav-link text-light btn btn-sm btn-primary fw-bold" asp-area="" asp-controller="Authorization" asp-action="Profile">Профиль</a>
                        </li>
                        <li class="nav-item mx-lg-2 mx-md-1 mx-sm-1">
                            <a class="nav-link text-light btn btn-sm btn-primary fw-bold" asp-area="" asp-controller="Authorization" asp-action="Logout">Выйти</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item mx-lg-2 mx-md-1 mx-sm-1">
                            <a class="nav-link text-light btn btn-sm btn-primary fw-bold" asp-area="" asp-controller="Authorization" asp-action="Register">Регистрация</a>
                        </li>
                        <li class="nav-item mx-lg-2 mx-md-1 mx-sm-1">
                            <a class="nav-link text-light btn btn-sm btn-primary fw-bold" asp-area="" asp-controller="Authorization" asp-action="Login">Войти</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer mt-auto bg-dark text-light">
    <div class="container text-center text-md-start mt-5">
        <div class="container text-center text-md-start mt-5">
            <div class="row mt-3">
                <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mb-4 d-none d-md-block">
                    <form>
                        <h6 class="fw-bold mb-4"><i class="bi bi-chat-left-dots-fill me-3"></i>Обратная связь</h6>
                        <textarea placeholder="Напишите нам!" class="form-control custom-scroll" aria-label="Textarea" style="height: 115px; resize: none;"></textarea>
                        <div class="d-flex justify-content-start align-items-center">
                            <button type="submit" class="btn btn-primary fw-bold mt-3">Отправить</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-4 mx-auto mb-4">
                    <div class="ms-auto me-auto fit">
                        <div>
                            <h6 class="fw-bold mb-4 me-auto ms-auto ms-lg-0 ms-xl-0 fit">Карта сайта</h6>
                        </div>
                        <div>
                            <ul class="list-unstyled">
                                <li>
                                    <a class="text-reset fit" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                                </li>
                                <li>
                                    <a class="text-reset fit" asp-area="" asp-controller="Shop" asp-action="Categories">Товары</a>
                                </li>
                                <li>
                                    <a class="text-reset fit" asp-area="" asp-controller="Configurator" asp-action="Index">Конфигуратор</a>
                                </li>
                                <li>
                                    <a class="text-reset fit" asp-area="" asp-controller="Authorization" asp-action="Profile">Профиль</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-3 mx-auto mb-md-0 mb-4">
                    <div class="ms-auto me-auto me-lg-0 me-xl-0 fit">
                        <i class="logo mb-3"></i>
                        <p><i class="bi bi-telephone-fill me-3"></i>+7 (900) 999-22-11</p>
                        <p><i class="bi bi-envelope-fill me-3"></i>info@example.com</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>